@using December.Core.Entities.Areas;
@model IEnumerable<Product>
<main id="main" class="main">
    <section class="section">
        <div class="row">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Product</h5>

                    <a asp-action="Create" class="btn btn-dark">Create New </a>

                    <!-- Table with stripped rows -->
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Image</th>
                                <th scope="col">Name</th>
                                <th scope="col">Settings</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @foreach(var image in item.Images)
                                        {
                                            if (image.IsMain)
                                            {
                                                <img src="~/@image.ImageUrl" style="width:100px" />
                                            }
                                        }
                                    </td>
                                    <td>@item.ProductName</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id=@item.Id class="btn btn-primary">
                                            <i class="bx bx-comment-detail"></i>
                                        </a>
                                        <a asp-action="Update" asp-route-id=@item.Id class="btn btn-warning">
                                            <i class="bx bxs-edit"></i>
                                        </a>
                                        @* <a asp-action="Delete" asp-route-id=@item.Id class="btn btn-danger">
                                            <i class="bx bxs-trash"></i>
                                        </a> *@
                                        <form style="margin-left:10px;" method="post" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Bunumu Istiyirdiniz heee Bunumu Istiyirdiniz?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger">
                                                <i class="bx bx-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->

                </div>
            </div>
        </div>
    </section>
</main><!-- End #main -->