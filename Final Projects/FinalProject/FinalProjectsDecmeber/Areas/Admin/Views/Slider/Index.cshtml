@model IEnumerable<Slider>
@{
    ViewData["Title"] = "Index";
    int counter = 1;
}

<main id="main" class="main">
    <section class="section">
        <div class="row">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Sliders</h5>
                    <!--
                        demeli slider deki sekilllerin syi cox olmamasi
                    -->
                    @if (ViewBag.Count < 5)
                    {
                        <a asp-action="Create" class="btn btn-dark">Create New </a>
                    }
                    <!-- Table with stripped rows -->
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Image</th>
                                <th scope="col">DescriptionOne</th>
                                <th scope="col">Description</th>
                                <th scope="col">Settings</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@counter</th>
                                    <td>
                                        <img src="~/@item.SliderIamgeUrl" style="width:100px" />
                                    </td>
                                    <td>@item.SliderDescriptionone</td>
                                    <td>@item.SliderDescription</td>
                                    <td>
                                        <a asp-action="Detail" asp-route-id=@item.Id class="btn btn-primary">
                                            <i class="bx bx-comment-detail"></i>
                                        </a>
                                        <a asp-action="Update" asp-route-id=@item.Id class="btn btn-warning">
                                            <i class="bx bxs-edit"></i>
                                        </a>
                                        <form style="margin-left:5px;display:inline-block;" method="post" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Bunumu Istiyirdiniz heee Bunumu Istiyirdiniz?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger">
                                                <i class="bx bx-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                counter++;
                            }
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->

                </div>
            </div>
        </div>
    </section>
</main><!-- End #main -->
