@using FinalProjectsDecmeberUI.ViewModels.AuthVMs;
@model LoginVM
<main id="Login">
    <!-- Start-Main -->
    <section class="Login">
        <form method="post">
            <div class="row">
                <h1>Daxil ol</h1>
                <p style="margin-left:20px">Zəhmət olmasa e-mail və şifrənizi daxil edin:</p>
                <div class="text-danger text-align-center" asp-validation-summary="ModelOnly"> </div>
                <div class="form-group col-lg-12">
                    <input asp-for="Email" class="form-controls" id="form-first" type="email" placeholder="">
                    <label asp-for="Email">Email</label>
                    <span style="display:block; margin:-30px 0px 15px -250px" asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-12">
                    <input asp-for="Password" class="form-controls" id="form-second" type="password" placeholder="">
                    <label asp-for="Password">Password</label>
                    <span style="display:block; margin:-30px 0px 15px -280px" asp-validation-for="Password" class="text-danger"></span>
                </div>
                <p class="col-lg-12 Forgot">
                    <a href="">Şifrəni unutmusan ?</a>
                </p>
                <p class="col-lg-12 button">
                    <button type="submit">Daxil ol</button>
                </p>
                <p>
                    <span>
                        Yeni müştərilər?
                    </span>
                    <a asp-action="Register">
                        Qeydiyyatdan keçin
                    </a>
                </p>
            </div>
        </form>
    </section>
    <partial name="_ValidationPartial">
</main> <!-- End-Main -->
